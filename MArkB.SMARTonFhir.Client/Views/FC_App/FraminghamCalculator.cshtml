@model MArkB.SMARTonFhir.Client.Models.ViewModels.FraminghamCalculatorViewModel

@{
  
  Layout = "~/Views/Shared/_LayoutSMART.cshtml";
}
<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<script src="http://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>

<div class="form-group">
    @Html.LabelFor(m => m.FCM.FirstName, new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.FCM.FirstName, new { @class = "form-control" })
        @Html.TextBoxFor(m => m.FCM.LastName, new { @class = "form-control" })

   @Html.LabelFor(m => m.FCM.Gender, new { @class = "col-md-2 control-label" })    
        @Html.TextBoxFor(m => m.FCM.Gender, new { @class = "form-control" })
  
        @Html.LabelFor(m => m.FCM.Age, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.FCM.Age, new { @class = "form-control" })

        @Html.LabelFor(m => m.FCM.TotalCholesterol, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.FCM.TotalCholesterol, new { @class = "form-control" })

        @Html.LabelFor(m => m.FCM.HDL, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.FCM.HDL, new { @class = "form-control" })
        
        @Html.LabelFor(m => m.FCM.Smoker, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.FCM.Smoker, new { @class = "form-control" })
        
        @Html.LabelFor(m => m.FCM.SystolicBP, new { @class = "col-md-2 control-label" })
        @Html.TextBoxFor(m => m.FCM.SystolicBP, new { @class = "form-control" })


       

    </div>
    @Html.Label("Score", new { @class = "col-md-2 control-label" })
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.FraminghamScore, new { @class = "form-control" })

    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}